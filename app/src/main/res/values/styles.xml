<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/avigilon_blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:colorControlNormal">@color/avigilon_blue</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ContactSheetStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/accent</item>
    </style>

    <style name="AlarmStatusAppearanceInReview">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/dark_red</item>
    </style>

    <style name="AlarmStatusAppearanceDismissed">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/emphasized_text</item>
    </style>

    <style name="AlarmStatusAppearanceUnReview">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textColor">@color/avigilon_blue</item>
    </style>

    <style name="ActivityLogDescriptionAppearanceComment">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/emphasized_text</item>
    </style>

    <style name="ContactSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">400dp</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:elevation">3dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>

    <style name="signInTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/avigilon_blue_semi_transparent</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/alarm_green</item>
        <item name="colorControlNormal">@color/avigilon_blue</item>
        <item name="colorControlActivated">@color/avigilon_blue</item>
        <item name="android:textColor">@color/translucentBlack</item>
        <item name="android:textColorHighlight">@color/alarm_red</item>
        <item name="android:textColorLink">@color/accent_orange</item>
    </style>

    <style name="AvigilonSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/avigilon_gray</item>
    </style>

    <style name="AppDialogTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/avigilon_blue</item>
        <item name="android:windowTitleStyle">@style/AppDialogTitleStyle</item>
        <!--title and message color -->
        <item name="android:textColorPrimary">@color/avigilon_blue</item>
        <!--dialog background
        <item name="android:windowBackground">@color/avigilon_gray</item>
        -->
    </style>

    <style name="AppDialogTheme.Black">
        <!--title and message color -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/light_blue</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>


    <style name="list_item_camera_swipe_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="colorControlHighlight_blue">
        <item name="colorControlHighlight">@color/avigilon_blue</item>
    </style>

    <style name="colorControlHighlight_gray">
        <item name="colorControlHighlight">@color/avigilon_gray</item>
    </style>

    <style name="microphone_utility_view_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/avigilon_blue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">11sp</item>
    </style>



    <style name="signInRegionName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
